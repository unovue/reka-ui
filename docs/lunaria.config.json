{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "unovue/radix-vue",
    "rootDir": "docs"
  },
  "defaultLocale": {
    "lang": "en",
    "label": "English"
  },
  "locales": [
    {
      "lang": "en",
      "label": "English"
    },
    {
      "lang": "zh",
      "label": "简体中文"
    }
  ],
  "files": [
    {
      "location": ".vitepress/config/!(index).ts",
      "pattern": ".vitepress/config/@lang.ts",
      "type": "universal"
    },
    {
      "location": "content/**/*.md",
      "pattern": "content/@lang/@path",
      "type": "universal"
    }
  ],
  "outDir": ".vitepress/dist/_translations",
  "ignoreKeywords": [
    "lunaria-ignore"
  ],
  "dashboard": {
    "description": "Online localization status dashboard of Reka UI documentation",
    "basesToHide": [
      "content/"
    ]
  }
}
